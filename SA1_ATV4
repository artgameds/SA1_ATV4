/*COLOCAR O BANCO EM USO*/
USE comabem;

/*CRIANDO UM NOVO PERFIL DE USUARIO*/
CREATE ROLE noperfil;

/*CRIANDO UM NOVO USUARIO E O ADICONANDO AO PERFIL CRIADO*/
CREATE USER luiz IDENTIFIED BY "SenhaBemForte" DEFAULT ROLE novoPerfil;

/*DEFININDO O USURIO CRIADO PARA APENASPODER UTILIZAR O COMANDO SELECT*/
GRANT SELECT ON comaBem.* TO luiz;

/*APOS ABRIR O WORKENCH COM O NOVO USUARIO, FAZER UM TESTE DE SELECT*/
SELECT * FROM Protudos;

/*AGORA TENTAR FAZER UMA INSERÇÃO DE DADOS, VAI APRESENTAR ERRO, POIS APENAS DEFINIMOS O SELECT PARA ESSE USUARIO*/
INSERT INTO produtos (ds_produtos, vl_produtos, qt_protudo, cd_unidade) values ("frango", 30.00,2,1);
